<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <layout class="ch.qos.logback.classic.PatternLayout">
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </layout>
  </appender>
  
  <logger name="org.apache.ibatis" level="info" />
  <logger name="javax.activation" level="info" />
  <logger name="org.springframework" level="info" />
  <logger name="org.apache.directory" level="info" />
  <logger name="org.apache.mina" level="info" />
  <logger name="JdbmIndex" level="info" />

  <logger name="com.finture" level="info" />
  <logger name="com.finture.bpm.engine.impl.bpmn" level="debug" />
  <logger name="com.finture.bpm.engine.impl.cfg" level="debug" />
  <logger name="com.finture.bpm.engine.impl.cmd" level="debug" />
  <logger name="com.finture.bpm.engine.impl.jobexecutor" level="debug" />
  <logger name="com.finture.bpm.engine.impl.pvm" level="debug" />
  <logger name="com.finture.bpm.identity.impl.ldap" level="debug" />
  
  <root level="info">
    <appender-ref ref="STDOUT" />
  </root>
  
</configuration>
