<Context antiResourceLocking="true">

   <Resource name="BeanManager" 
      auth="Container"
      type="javax.enterprise.inject.spi.BeanManager"
      factory="org.jboss.weld.resources.ManagerObjectFactory"/>
      
   <ResourceLink name="ProcessEngineService"
            global="global/camunda-bpm-platform/process-engine/ProcessEngineService!com.finture.bpm.ProcessEngineService"
            type="com.finture.bpm.ProcessEngineService" />
            
   <ResourceLink name="ProcessApplicationService"
            global="global/camunda-bpm-platform/process-engine/ProcessApplicationService!com.finture.bpm.ProcessApplicationService"
            type="com.finture.bpm.ProcessApplicationService" />
            
   <ResourceLink name="ProcessEngineDataSource" global="jdbc/ProcessEngine" type="javax.sql.DataSource"/>
            
</Context>