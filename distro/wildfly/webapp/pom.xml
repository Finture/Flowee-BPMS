<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <parent>
    <groupId>com.finture.bpm.wildfly</groupId>
    <artifactId>flowee-bpms-wildfly</artifactId>
    <version>0.7.2</version>
  </parent>

  <modelVersion>4.0.0</modelVersion>
  <groupId>com.finture.bpm.webapp</groupId>
  <name>Flowee BPMS Platform - webapp - WildFly</name>
  <artifactId>flowee-bpms-webapp-wildfly</artifactId>
  <packaging>war</packaging>

  <properties>
    <!-- generate a bom of compile time dependencies for the license book.
    Note: Every compile time dependency will end up in the license book. Please
    declare only dependencies that are actually needed -->
    <skip-third-party-bom>false</skip-third-party-bom>
  </properties>

  <dependencies>
    <dependency>
      <groupId>com.finture.bpm.webapp</groupId>
      <artifactId>flowee-bpms-webapp-jakarta</artifactId>
      <version>${project.version}</version>
      <type>war</type>
      <scope>runtime</scope>
    </dependency>
  </dependencies>

  <build>
    <finalName>flowee-bpms-webapp</finalName>

    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-war-plugin</artifactId>
        <configuration>
          <archive>
            <manifestEntries>
              <!-- module dependencies for deployment on JBoss/WildFly -->
              <Dependencies>com.finture.bpm.flowee-bpms-engine,com.finture.bpm.dmn.flowee-bpms-engine-dmn,com.finture.bpm.model.flowee-bpms-bpmn-model,com.finture.bpm.model.flowee-bpms-cmmn-model,com.finture.bpm.model.flowee-bpms-dmn-model,com.finture.bpm.model.flowee-bpms-xml-model,com.finture.commons.flowee-bpms-commons-logging,com.finture.spin.flowee-bpms-spin-core,com.finture.bpm.juel.flowee-bpms-juel services,org.graalvm.js.js-scriptengine services</Dependencies>
            </manifestEntries>
          </archive>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
