<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns="urn:maven:assembly:1.1.2">
  
  <id>distro</id>
  
  <formats>
    <format>zip</format>
    <format>tar.gz</format>
  </formats>

  <includeBaseDirectory>false</includeBaseDirectory>
  
  <dependencySets>
  
    <dependencySet>
      <unpack>true</unpack>
      <includes>
        <include>com.finture.bpm.wildfly:flowee-bpms-wildfly-assembly</include>
      </includes>
      <outputDirectory />
    </dependencySet>
      
    <dependencySet>
      <outputDirectory />
      <unpack>true</unpack>
      <unpackOptions>
        <excludes>
          <exclude>**/META-INF/**</exclude>
        </excludes>
      </unpackOptions>
      <includes>
        <include>com.finture.bpm.distro:flowee-bpms-sql-scripts:jar:*</include>
      </includes>
    </dependencySet>

    <dependencySet>
        <outputFileNameMapping>${artifact.artifactId}-${artifact.version}.${artifact.extension}</outputFileNameMapping>
        <includes>
            <include>com.finture.bpm:flowee-bpms-engine-rest-jakarta:war:*</include>
        </includes>
        <outputDirectory>server/wildfly-${version.wildfly}/standalone/deployments</outputDirectory>
    </dependencySet>
    
    <dependencySet>
        <includes>
          <include>com.finture.bpm.webapp:flowee-bpms-webapp-wildfly:war:*</include>
        </includes>
        <outputDirectory>server/wildfly-${version.wildfly}/standalone/deployments</outputDirectory>
    </dependencySet>

    <dependencySet>
        <includes>
          <include>com.finture.bpm.example:flowee-bpms-example-invoice-jakarta:war:*</include>
        </includes>
        <outputDirectory>server/wildfly-${version.wildfly}/standalone/deployments</outputDirectory>
    </dependencySet>
    
  </dependencySets>
  
  <fileSets>
    <fileSet>
      <directory>../../flowee-bpms-welcome</directory>
      <outputDirectory>server/wildfly-${version.wildfly}/standalone/deployments/flowee-bpms-welcome.war</outputDirectory>
    </fileSet>
  </fileSets>
  
  <files>
     <file>
      <source>src/EMPTY_FILE</source>
      <outputDirectory>server/wildfly-${version.wildfly}/standalone/deployments/</outputDirectory>
      <destName>flowee-bpms-welcome.war.dodeploy</destName>
    </file>  
  </files>
  
</assembly>
